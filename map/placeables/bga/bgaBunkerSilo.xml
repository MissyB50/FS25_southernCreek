<?xml version="1.0" encoding="utf-8" standalone="no" ?>
<placeable type="bunkerSilo" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../../shared/xml/schema/placeable.xsd">
    <storeData>
        <name>$l10n_storeItem_planet_bunkerSiloLarge</name>
        <functions>
            <function>$l10n_function_bunkerSilo</function>
        </functions>
        <image>$data/placeables/planET/bgaBunkerSilo/store_bgaBunkerSilo.png</image>
        <price>140000</price>
        <dailyUpkeep>150</dailyUpkeep>
        <lifetime>1000</lifetime>
        <rotation>0</rotation>
        <brand>PLANET</brand>
        <species>PLACEABLE</species>
        <canBeSold>true</canBeSold>
        <showInStore>true</showInStore>
        <category>silos</category>
        <brush>
            <type>placeable</type>
            <category>buildings</category>
            <tab>silos</tab>
        </brush>
    </storeData>

    <base>
        <filename>$data/placeables/planET/bgaBunkerSilo/bgaBunkerSilo.i3d</filename>
    </base>

    <placement useRandomYRotation="false" useManualYRotation="true" placementPositionSnapSize="0.5" placementRotationSnapAngle="45" >
        <testAreas>
            <testArea startNode="testAreaStart01" endNode="testAreaEnd01" />
        </testAreas>

        <sounds>
            <place template="largeImp" />
        </sounds>
    </placement>

    <clearAreas>
        <clearArea startNode="clearAreaStart01" widthNode="clearAreaWidth01" heightNode="clearAreaHeight01"/>
    </clearAreas>

    <leveling requireLeveling="true" maxSmoothDistance="10" maxSlope="75" maxEdgeAngle="30">
        <levelAreas>
            <levelArea startNode="levelAreaStart01" widthNode="levelAreaWidth01" heightNode="levelAreaHeight01" groundType="concrete"/>
        </levelAreas>
    </leveling>

    <indoorAreas />

    <tipOcclusionUpdateAreas>
        <tipOcclusionUpdateArea startNode="tipOcclusionUpdateAreaStart01" endNode="tipOcclusionUpdateAreaEnd01" />
    </tipOcclusionUpdateAreas>

    <ai>
        <updateAreas>
            <updateArea startNode="tipOcclusionUpdateAreaStart01" endNode="tipOcclusionUpdateAreaEnd01" />
        </updateAreas>
    </ai>

    <bunkerSilo isExtendable="true" siloToSiloDistance="34.5" acceptedFillTypes="chaff grass_windrow dryGrass_windrow" inputFillType="chaff" outputFillType="silage" distanceToCompactedFillLevel="100" openingLength="5" >
        <area      startNode="siloAreaStart"      widthNode="siloAreaWidth"      heightNode="siloAreaHeight" />
        <innerArea startNode="siloInnerAreaStart" widthNode="siloInnerAreaWidth" heightNode="siloInnerAreaHeight" />
        <interactionTrigger node="siloAreaTrigger" />
        <wallLeft           node="wallLeft"  collision="wallLeftCollision"/>
        <wallRight          node="wallRight" collision="wallRightCollision"/>
    </bunkerSilo>

    <i3dMappings>
        <i3dMapping id="siloAreaStart" node="0>0|0" />
        <i3dMapping id="siloAreaWidth" node="0>0|0|0" />
        <i3dMapping id="siloAreaHeight" node="0>0|0|1" />
        <i3dMapping id="siloAreaTrigger" node="0>0|1" />
        <i3dMapping id="siloInnerAreaStart" node="0>1|0" />
        <i3dMapping id="siloInnerAreaWidth" node="0>1|0|0" />
        <i3dMapping id="siloInnerAreaHeight" node="0>1|0|1" />
        <i3dMapping id="clearAreaStart01" node="0>2|0" />
        <i3dMapping id="clearAreaWidth01" node="0>2|0|0" />
        <i3dMapping id="clearAreaHeight01" node="0>2|0|1" />
        <i3dMapping id="levelAreaStart01" node="0>3|0" />
        <i3dMapping id="levelAreaWidth01" node="0>3|0|0" />
        <i3dMapping id="levelAreaHeight01" node="0>3|0|1" />
        <i3dMapping id="testAreaStart01" node="0>4|0" />
        <i3dMapping id="testAreaEnd01" node="0>4|0|0" />
        <i3dMapping id="tipOcclusionUpdateAreaStart01" node="0>5|0" />
        <i3dMapping id="tipOcclusionUpdateAreaEnd01" node="0>5|0|0" />
        <i3dMapping id="wallLeft" node="0>6|1" />
        <i3dMapping id="wallRight" node="0>6|2" />
        <i3dMapping id="wallLeftCollision" node="0>7|0" />
        <i3dMapping id="wallRightCollision" node="0>7|1" />
    </i3dMappings>
</placeable>
